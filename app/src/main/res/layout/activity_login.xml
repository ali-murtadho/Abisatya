<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/layoutLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp">

        <ImageView
            android:id="@+id/logoLogin"
            android:layout_width="90dp"
            android:layout_height="86dp"
            android:src="@drawable/logo_abisatya"
            android:layout_gravity="center">
        </ImageView>

        <TextView
            android:id="@+id/abisatyaLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_gravity="center">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="35dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoEmail"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/logo_email">
                </ImageView>

                <ImageView
                    android:id="@+id/lineEmail"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/line">
                </ImageView>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textSize="8sp"
                    android:fontFamily="@font/roboto"
                    android:background="@color/transparent"
                    android:textColorHint="@color/secondary_color">
                </EditText>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoPass"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/logo_password">
                </ImageView>

                <ImageView
                    android:id="@+id/linePass"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/line">
                </ImageView>

                <EditText
                    android:id="@+id/etPass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="8sp"
                    android:fontFamily="@font/roboto"
                    android:background="@color/transparent"
                    android:textColorHint="@color/secondary_color">
                </EditText>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutForm">

        <TextView
            android:id="@+id/login_tvLupaPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:paddingTop="5dp"
            android:text="lupa password"
            android:textColor="@color/secondary_color"
            android:textSize="12sp">
        </TextView>

        <android.widget.Button
            android:id="@+id/login_btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/square"
            android:fontFamily="@font/roboto_bold"
            android:text="Masuk"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textAllCaps="false">
        </android.widget.Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="10dp"
                android:text="belum punya akun?"
                android:textColor="@color/secondary_color"
                android:textSize="12sp">
            </TextView>
            <TextView
                android:id="@+id/login_tvDaftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="10dp"
                android:text=" daftar di sini!"
                android:textColor="@color/secondary_color"
                android:textSize="12sp">
            </TextView>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>