<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCatatan"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/square"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/etJudulHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Halo!"
                android:textColor="@color/tertiary_color"
                android:textSize="10sp"></TextView>

            <TextView
                android:id="@+id/etCatatanHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:maxLength="200"
                android:text="Halo Catatan Satu Catatan Halo Catatan Satu Catatan Halo Catatan Satu Catatan Halo Catatan Satu Catatan satu Catatan Satu Catatan satu Catatan Satu Catatan satu Catatan Satu Catatan satu"
                android:textColor="@color/tertiary_color"
                android:textSize="10sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/nunito_extrabold"
                android:text="30 November 2022"
                android:textColor="@color/secondary_color"
                android:textSize="10sp"></TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <android.widget.Button
            android:id="@+id/btnEditNote"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/square"
            android:backgroundTint="@color/primary_color"
            android:fontFamily="@font/roboto_bold"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textAllCaps="false">
        </android.widget.Button>

        <android.widget.Button
            android:id="@+id/btnHapusNote"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/square"
            android:backgroundTint="@color/primary_color"
            android:fontFamily="@font/roboto_bold"
            android:text="Hapus"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textAllCaps="false">
        </android.widget.Button>
    </LinearLayout>

</LinearLayout>